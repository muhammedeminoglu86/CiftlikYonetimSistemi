<!DOCTYPE html>
<html lang="tr">
	<!--begin::Head-->
	@await Component.InvokeAsync("Head")
	<!--end::Head-->
	<!--begin::Body-->
	<body id="kt_app_body" data-kt-app-header-fixed="true" data-kt-app-header-fixed-mobile="true" data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-aside-enabled="true" data-kt-app-aside-fixed="true" data-kt-app-aside-push-toolbar="true" data-kt-app-aside-push-footer="true" class="app-default">
		<!--begin::Theme mode setup on page load-->
		@await Component.InvokeAsync("ThemeMode")
		<!--end::Theme mode setup on page load-->
		<!--begin::App-->
		<div class="d-flex flex-column flex-root app-root" id="kt_app_root">
			<!--begin::Page-->
			<div class="app-page flex-column flex-column-fluid" id="kt_app_page">
				<!--begin::Header-->
				@await Component.InvokeAsync("Header")

				<!--end::Header-->
				<!--begin::Wrapper-->
				<div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
					<!--begin::Sidebar-->
					@await Component.InvokeAsync("SideBar")
					<!--end::Sidebar-->
					<!--begin::Main-->
					@RenderBody()
					<!--end:::Main-->
					<!--begin::aside-->
					@await Component.InvokeAsync("RightSideBar")
					<!--end::aside-->
				</div>
				<!--end::Wrapper-->
			</div>
			<!--end::Page-->
		</div>
		<!--end::App-->
		<!--begin::Drawers-->
		<!--begin::Activities drawer-->
		@await Component.InvokeAsync("KT_Activity")
		<!--end::Activities drawer-->
		@await Component.InvokeAsync("KT_Drawer")
		<!--begin::Chat drawer-->
		<!--end::Chat drawer-->
		<!--begin::Chat drawer-->
		@await Component.InvokeAsync("KT_Shopping")
		<!--end::Chat drawer-->
		<!--end::Drawers-->
		<!--begin::Scrolltop-->
		<div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
			<i class="ki-outline ki-arrow-up"></i>
		</div>
		<!--end::Modal - Invite Friend-->
		<!--end::Modals-->
		@await Component.InvokeAsync("JS")

		<!--end::Custom Javascript-->
		<!--end::Javascript-->
	</body>
	<!--end::Body-->
</html>